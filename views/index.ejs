<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/Buildings.css">
    <link rel="stylesheet" href="css/Index.css">
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            let searchBar = document.getElementsByClassName('search-bar')[0];
            let toSearch = Array.from(document.getElementsByClassName('building'));
            searchBar.addEventListener('input', (e) => {
                toSearch.forEach(elem => {
                    let name = elem.children[0].innerHTML.toLowerCase();
                    elem.classList.remove('invisible');
                    if(name.indexOf(e.target.value.toLowerCase()) !== 0) {
                        elem.classList.add('invisible');
                    }
                })
            });
        })
    </script>
</head>
<body>
    <nav>
        <a href="./"><img class='logo' src="logo.png" alt="Study Spot"></a>
        <h1 class="title">Buildings at the University of Massachusetts, Amherst</h1>
    </nav>
    <input class="search-bar" placeholder="Search buildings here"/>
    <div id="buildings" class="container">
        <script>
            let url = 'http://localhost:5001/buildings';

            fetch(url).then(response => response.json()).then(data => {
                data.forEach(building => {
                    let p = document.getElementById('buildings');
                    let elem = document.createElement('a');
                    elem.href = './rooms/';
                    elem.className = 'building';
                    elem.innerHTML = `<h2>${building.building_name}</h2>`;
                    p.appendChild(elem);
                    localStorage.setItem('building_id', building.building_id)
                    localStorage.setItem('building_name', building.building_name)

                })
                console.log(data);
            })
            .catch(err => console.error(err))
            

        </script>
    </div>
</body>
</html>